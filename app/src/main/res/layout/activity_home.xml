<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.epicodus.myrecords.ui.HomeActivity">

    <TextView
        android:id="@+id/usernameWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/colorPrimaryText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/myCollectionNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyCollection"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/usernameWelcome"
        android:textSize="25sp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/myWishlistNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="MyWishlist"
        android:textSize="25sp"
        android:layout_below="@+id/myCollectionNav"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp" />

</RelativeLayout>
